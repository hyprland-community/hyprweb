---
interface Props {
  title: string
  body: string
  href: string
}
import ChevronRight from "~icons/pixelarticons/chevron-right"

const { href, title, body } = Astro.props
---

<li>
  <a {href} class="group flex flex-col gap-4">
    <h2 class="flex gap-4 text-4xl font-bold">
      {title}
      <ChevronRight class="transition-transform group-hover:translate-x-1" />
    </h2>
    <p class="text-lg font-medium text-slate-300">
      {body}
    </p>
  </a>
</li>
<style></style>
