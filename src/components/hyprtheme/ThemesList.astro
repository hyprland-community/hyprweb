---
import ThemeCard from "#components/ThemeCard.astro"
import type { ProcessedTheme } from "#api/themes.json"

type Props = { themes: readonly ProcessedTheme[] }

const { themes } = Astro.props
---

<!-- More themes -->
<ul
  class="gap-8 md:grid md:grid-cols-2 flex flex-col px-8 max-w-screen-xl mx-auto w-full"
>
  {themes.map((theme) => <ThemeCard theme={theme} />)}
</ul>
