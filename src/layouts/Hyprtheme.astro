---
import Layout from "./Layout.astro"
import Navbar from "#components/hyprtheme/Navbar.astro"
import Footer from "#components/hyprtheme/Footer.astro"
import { type LogoColors } from "#components/hyprtheme/Logo.astro"
import type { ComponentProps } from "astro/types"
import type { Except } from "type-fest"

type Props = Except<ComponentProps<typeof Layout>, "icon"> & {
  logoColors?: LogoColors
}

const {
  title,
  description = "Easily install themes for Hyprland",
  logoColors,
} = Astro.props
---

<Layout {title} {description} icon="/hyprtheme.svg">
  <Navbar {logoColors} />

  <slot />

  <Footer />
</Layout>
